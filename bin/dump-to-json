#!/usr/bin/env node

var argv = require('yargs').demand(['file', 'db']).usage(usage()).example(example(), 'write to file specified').argv

var dumpToJson = require('../lib/dump-to-json')
dumpToJson(argv.file)

function usage() {
  return 'Dump all existing entries in the database to a json file. The resulting file can be loaded later with bin/load-from-json'
}

function example() {
  return '$0 --file /output/path/to/keys/file --db /path/to/leveldb'
}
